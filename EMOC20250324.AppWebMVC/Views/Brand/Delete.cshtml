@model EMOC20250324.AppWebMVC.Models.Brand

@{
    ViewData["Title"] = "Delete";
}

<h1><strong>Eliminar Marca</strong></h1>

<h3>¿Está seguro de eliminar la marca?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BrandName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BrandName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
